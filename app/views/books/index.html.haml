-#  This file is app/views/books/index.html.haml
%h1 All Movies
 
%table#books
  %thead
    %tr
      %th Book Title
      %th Author
      %th Year
      %th Genre
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.year
        %td= link_to "More about #{book.title}", book_path(book)